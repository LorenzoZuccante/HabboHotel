        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cellulare, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Cellulare, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Cellulare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registra" class="btn btn-primary mt-3" />
        </div>
    </div>
}
